<resources>

    <style name="CardView.RssFeedReader" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="CardView.RssFeedReader.RecyclerView.Items" parent="CardView.RssFeedReader">
        <item name="android:layout_marginStart">@dimen/margin_half</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_half</item>
    </style>

    <style name="TextView.RssFeedReader.NewItemIndicator" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">@dimen/feed_item_new_item_indicator_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/feed_item_new_item_indicator_text</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
