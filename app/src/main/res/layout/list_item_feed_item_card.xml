<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_feed_item_card"
    style="@style/CardView.RssFeedReader.RecyclerView.Items">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_feed_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/feed_item_title_text_view"
            android:layout_width="@dimen/feed_item_title_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintEnd_toStartOf="@id/feed_item_favorite_item_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="What features do you hate or miss on current smartphones?" />

        <TextView
            android:id="@+id/feed_item_date_text_view"
            android:layout_width="@dimen/feed_description_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feed_item_title_text_view"
            tools:text="Nov 8" />

        <TextView
            android:id="@+id/feed_item_new_item_indicator_text_view"
            style="@style/TextView.RssFeedReader.NewItemIndicator"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_standard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/feed_item_title_text_view"
            app:layout_constraintStart_toEndOf="@+id/feed_item_date_text_view"
            app:layout_constraintTop_toBottomOf="@+id/feed_item_title_text_view"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/feed_item_favorite_item_button"
            android:layout_width="@dimen/feed_item_favorite_item_button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard"
            android:background="@android:color/transparent"
            android:contentDescription="@string/favorite_item_button_content_description"
            android:tint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.100000024"
            tools:src="@drawable/favorite_border_empty_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>